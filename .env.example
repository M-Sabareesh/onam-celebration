# Environment Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SMS Service Configuration (Choose one)
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+46701234567

# MessageBird (Alternative)
MESSAGEBIRD_ACCESS_KEY=your_messagebird_access_key
MESSAGEBIRD_ORIGINATOR=YourAppName

# Email Configuration (for password reset backup)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Static Files (for production)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/

# Logging Configuration
LOG_LEVEL=INFO

# Game Configuration
TREASURE_HUNT_LEVELS=5
SMS_RATE_LIMIT_PER_HOUR=10
OTP_EXPIRY_MINUTES=5

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Time Zone
TIME_ZONE=Europe/Stockholm
